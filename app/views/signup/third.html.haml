.body-register2
  .header
    = render 'products/login-header'
  .main
    = form_for '', url: "/signup/fourth", method: :get, html: {class: 'main__container'} do |f|
      .main__container__header
        発送元・お届け先住所入力
      = f.fields_for :address, html: {class: 'main__container__form'} do |i|
        .main__container__form__kanji
          .main__container__form__kanji__title
            お名前 
          .main__container__form__kanji__hissu
            必須
          .main__container__form__kanji__require
            = i.text_field :last_name, :type => "text", placeholder:"例)田中", class: "main__container__form__kanji__require__family-name"
            = i.text_field :first_name, :type => "text", placeholder:"例)太郎", class: "main__container__form__kanji__require__first-name"
        .main__container__form__kana
          .main__container__form__kana__title
            お名前カナ
          .main__container__form__kana__hissu
            必須
          .main__container__form__kana__require
            = i.text_field :last_name_kana, :type => "text", placeholder:"例)タナカ", class: "main__container__form__kana__require__family-name"
            = i.text_field :first_name_kana, :type => "text", placeholder:"例)タロウ", class: "main__container__form__kana__require__first-name"
        .main__container__form__post
          .main__container__form__post__title
            郵便番号
          .main__container__form__post__require
            必須
          = i.text_field :post_number, :type => "text", placeholder:"例)123-4567", class: "main__container__form__post__number"
        .main__container__form__pref
          .main__container__form__pref__title
            都道府県
          .main__container__form__pref__hissu
            必須
          .main__container__form__pref__require
