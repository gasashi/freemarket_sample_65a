.body-register2-header
  = render 'signup/progress/header3'

.body-register2
  .address-header
    発送元・お届け先住所入力
  = form_for @user, url: signup_index_path, html: {class: 'body-register2-form'} do |f|
    = render 'error_message3', model: f.object
    = f.fields_for :address, html: {class: 'address-form'} do |i|

      .kanji-name-content
        .address-input-name
          %label
            お名前
          %span
            必須
        .kanji-name-content__box
          = i.text_field :last_name, placeholder:"例)田中", class: "kanji-name-content__box__family-name"
          = i.text_field :first_name, placeholder:"例)太郎", class: "kanji-name-content__box__first-name"

      .kana-name-content
        .address-input-name
          %label
            お名前カナ
          %span
            必須
        .kana-name-content__box
          = i.text_field :last_name_kana, placeholder:"例)タナカ", class: "kana-name-content__box__family-name"
          = i.text_field :first_name_kana, placeholder:"例)タロウ", class: "kana-name-content__box__first-name"
    
      .post-number-content
        .address-input-name
          %label
            郵便番号
          %span
            必須
        = i.text_field :post_number, placeholder:"例)123-4567", class: "post-number-content__box"

      .prefecture-content
        .address-input-name
          %label
            都道府県
          %span
            必須
        = i.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "選択してください"
        
        .city-content
          .address-input-name
            %label
              市町村
            %span
              必須
          = i.text_field :city, placeholder:"例)熊本市", class: "city-content__box"
  
        .address-number-content
          .address-input-name
            %label
              番地
            %span
              必須
          = i.text_field :address_number, placeholder:"例)通町筋1-1-1", class: "address-number-content__box"

        .building-content
          .address-input-name
            %label
              建物名
            %span.any
              必須
          = i.text_field :building, placeholder:"例)下通りビル109", class: "building-content__box"

        .phone-number-content
          .address-input-name
            %label
              電話
            %span.any
              必須
          = i.text_field :phone_number, placeholder:"例)05012345678", class: "phone-number-content__box"
        
        = f.submit "登録" ,class: "address-btn"
.body-register2-footer
  = render 'products/login-footer'