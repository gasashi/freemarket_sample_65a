        .product-information
          %table{border: "1", style: "border-collapse: collapse"}
            %tr
              %th
                出品者
              %td.product-information__table__td
                hoge
            %tr
              %th
                カテゴリー
              %td
                = link_to "#" do
                  ベビー・キッズ
                %br/
                = link_to "#" do
                  ベビー服(男女兼用)  ~95cm
                %br/
                = link_to "#" do
                  アウター
            %tr
              %th ブランド
              %td
            %tr
              %th 商品のサイズ 
              %td
            %tr
              %th 商品の状態 
              %td 未使用に近い
            %tr
              %th 配送料の負担
              %td 送料込み（出品者負担）
